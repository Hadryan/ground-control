// base styles

body {
  max-width: 960px;
  margin: 0 auto;
  
  font-family: 'Lato', Helvetica, sans-serif;
  font-size: 16px;
  line-height: 1.5;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: bold;
  margin-bottom: 1.5em;
}

h1 {
  font-size: 32px
}

h2 { 
  font-size: 24px;
}

p, ul, ol {
  margin-bottom: 0.5em;
}

code {
  font-family: Monaco, monospace;
  background: #eee;
}