@import 'include/all';

body {
  color: $c-high;
  font-family: $f-primary;
  font-size: 16px;
  line-height: 1.5;
  font();
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  padding: 0;
  font-weight: normal;
}

p, ul, ol {
  margin-bottom: 0.75em;
}

h1 {
  h1();
}
h2 {
  h2();
}
h3 {
  h3();
}
h4 {
  h4();
}
.small {
  small();
}

a {
  link();
  text-decoration: none;
  transition: all ease-out 200ms;
}

button {
  border: none;
  outline: none;
}

.btn{
  background: $c-medium;
  border-radius: 5px;
  box-sizing: border-box;
  color: white;
  cursor: pointer;
  font-size: $small * 1px;
  font-family: $f-secondary;
  line-height: 1em;
  padding: 8px 10px;
  [class^="icon-"]:before,
  [class*=" icon-"]:before {
    font-size: .7em;
    line-height: 1em;
    vertical-align: baseline;
  }
  &:hover {
    background: $c-medium-high;
    color: white;
  }
  &:active {
    background: $c-medium-high;
    box-shadow: rgba(black, .2) 0 1px 3px 0 inset;
    color: white;
  }
  &.primary {
    background: $c-primary;
    &:hover {
      background: lighten($c-primary, 10%);
      color: white;
    }
    &:active {
      background: lighten($c-primary, 10%);
      box-shadow: rgba(black, .2) 0 1px 3px 0 inset;
      color: white;
    }
  }
}

code {
  font-family: Monaco, monospace;
  background: #ebebf1;
  padding: 0 4px;
  text-shadow: rgba(white, .5) 0 1px 0;
}

pre > code {
  font-size: 1em;
}

li {
  list-style-position: inside;
}

.alt-type {
  font-family: $f-secondary;
}