@import 'include/all';

body {
  font-family: $f-primary;
  font-size: 16px;
  line-height: 1.5;
  font();
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  padding: 0;
  font-weight: normal;
}

p, ul, ol {
  margin-bottom: 0.75em;
}

h1 {
  h1(no);
}
h2 {
  h2(no);
}
h3 {
  h3(no);
}
h4 {
  h4();
}
.small {
  small(no);
}

a {
  link();
  text-decoration: none;
  transition: all ease-out 200ms;
}

code {
  font-family: Monaco, monospace;
  background: #eee;
  font-size: 14px;
  padding: 0 4px;
}

form {
  margin: 0 auto;

  label {
    float: left;
  }
  .field_error {
    float: right;
    color: red;
  }

  label, input {
    display: block;
    clear: both
  }

  input, textarea {
    width: 100%;
  }

  textarea {
    height: 400px;
  }

  fieldset.buttons {
    float: right;
  }
}

li {
  list-style-position: inside;
}

.alt-type {
  font-family: $f-secondary;
}