// layout
contentMaxWidth = 800px;

html {
  height: 100%;
}

#wrapper {
  margin: 0 auto;
  position: relative;
  max-width: contentMaxWidth * 2;
  background: #eee;
}

#content {
  min-height: 100%;
  width: 50%
  margin: 0 35% 0 15%
}

#sidebar {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 20%;
  
  padding: 10px 20px;
  background: #ddd;
}