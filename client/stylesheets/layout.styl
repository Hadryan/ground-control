@import nib;

// layout
contentMaxWidth = 800px;

html {
  height: 100%;
}

body {
  height: 100%;
}

#wrapper {
  margin: 0 auto;
  position: relative;
  min-height: 100%;
  max-width: contentMaxWidth * 2;
  
  background: #eee;
}

#content {
  min-height: 100%;
  width: 50%
  margin: 0 35% 0 15%
}

#sidebar {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 20%;
  
  padding: 10px 20px;
  background: #ddd;
  
  .about {
    margin-top: 20px;
    
    h3 {
      text-transform: uppercase;
    }
  }
  
  .attribution {
    absolute: bottom 10px left 20px;
  }
}