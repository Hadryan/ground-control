@import 'include/all';

// layout
contentMaxWidth = 800px;

html {
  height: 100%;
}

body {
  height: 100%;
}

#wrapper {
  margin: 0 auto;
  max-width: contentMaxWidth * 2;
  position: relative;
  #content {
    max-width: 800px;
  }
  #sidebar {
    box-sizing: border-box;
    padding: 3em 1.5em;
    positioning(fixed, 0, 0, auto, auto, 280px, 100%);
    .about {
      h3 {
        text-transform: uppercase;
      }
    }
    .attribution {
      positioning(absolute, auto, auto, 1.5em, 1.5em);
    }
  }
}