@import 'include/all';

// layout
contentMaxWidth = 800px;

html {
  height: 100%;
}

body {
  height: 100%;
}

#wrapper {
  margin: 0 auto;
  max-width: contentMaxWidth * 2;
  position: relative;
  #content {
    max-width: contentMaxWidth;
  }
  #header #controls {
    fixed: top left;
    width: 100%
    max-width: contentMaxWidth;
    z-index: 2;
  }
  #sidebar {
    box-sizing: border-box;
    padding: 3em 1.5em;
    positioning(fixed, 0, 0, auto, auto, 280px, 100%);
    .attribution {
      positioning(absolute, auto, auto, 1.5em, 1.5em);
    }
  }
}