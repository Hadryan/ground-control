@import 'include/all';

#header {
  #banner {
    box-sizing: border-box;
    height: 9em;
    overflow: hidden;
    position: relative;
    width: 100%;
    &:after {
      background-image: linear-gradient(top, rgba(black, .3), rgba(black, 0) 50%, rgba(black, .5) 100% );
      content: '';
      positioning(absolute, 0,0,0,0);
    }
    h1 {
      font-size: 48px;
      line-height: 48px;
      margin-top: -24px;
      positioning(absolute, 50%, auto, auto, 32px);
      text-transform: uppercase;
      z-index: 1;
      a {
        color: white;
      }
    }
    img {
      positioning(absolute, 25%, auto, auto, auto, 100%, auto);
      margin-top: -50%;
    }
  }
  #controls {
    background: white;
    height: 3em;
    text-align: center;
    line-height: 3em;
    border-bottom: 1px solid $c-low;
    &:before,
    &:after {
      content: '';
      background: $c-low;
    }
    &:before {
      positioning(absolute, 0, auto, 0, 0, 1px);
    }
    &:after {
      positioning(absolute, 0, 0, 0, auto, 1px);
    }
    .control-title {
      font-size: 32px;
      font-family: $f-secondary;
      text-transform: uppercase;
      a {
        color: black;
      }
    }
    .btn.top {
      positioning(absolute, 8px, 24px);
      text-transform: uppercase;
    }
    .shadow {
      positioning(absolute, 100%, 0, auto, 0, auto, 1em);
      background-image: linear-gradient(top, rgba(black, .1), transparent 100% );
    }
  }

  // XXX: style these
  #login-buttons {
    float: right
  }

  /* controls are hidden until the header isn't visible */
  #controls {
    opacity:0;
    min-height: 0;
    transition: all ease-out 800ms;
  }
  &.scrolledEnough {
    #controls {
      opacity: 1;
      min-height: auto;
      transition: opacity ease-out 800ms;
    }
  }
}

#sidebar {
  .about {
    font-family: $f-primary;
    color: #666;
  }
  .links li {
    list-style-type: none;
    float: left;
    margin: 10px;
    font-size: 2em
    a {
      color: #333;
    }
  }
  form {
    clear: left;
  }
}

#footer {
  margin: 20px 0;
  border-top: 2px solid #aaa;
}

#header, #footer {
  h2 {
    margin: 10px 0;
    a {
      text-decoration: none
    }
  }
}