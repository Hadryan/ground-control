@import 'include/all';

#header {
  #banner {
    box-sizing: border-box;
    height: 9em;
    overflow: hidden;
    position: relative;
    width: 100%;
    &:after {
      background-image: linear-gradient(top, rgba(black, .3), rgba(black, 0) 50%, rgba(black, .5) 100% );
      content: '';
      positioning(absolute, 0,0,0,0);
    }
    h1 {
      font-size: 48px;
      line-height: 48px;
      margin-top: -24px;
      positioning(absolute, 50%, auto, auto, 32px);
      text-transform: uppercase;
      z-index: 1;
      a {
        color: white;
      }
    }
    img {
      positioning(absolute, 25%, auto, auto, auto, 100%, auto);
      margin-top: -50%;
    }
  }
  #controls {
    background: white;
    height: 40px;
    h1 {
      text-align: center;
      font-size: 30px;
      line-height: 40px;
      text-transform: uppercase;
      font-family: $f-secondary;
      a {
        color: black;
      }
    }
    .top {
      cursor: pointer;
      
      float: right;
      margin: 5px 20px;
      border-radius: 5px;
      padding: 5px 8px;
      
      background: #888;
      color: #eee;
      font-size: 0.6em;
      text-transform: uppercase;
    }
  }
  
  // XXX: style these
  #login-buttons {
    float: right
  }
  
  /* controls are hidden until the header isn't visible */
  #controls {
    display: none;
  }
  &.scrolledEnough {
    #controls {
      display: block;
    }
  }
}

#footer {
  margin: 20px 0;
  border-top: 2px solid #aaa;
}

#header, #footer {
  h2 {
    margin: 10px 0;
    a {
      text-decoration: none
    }
  }
}