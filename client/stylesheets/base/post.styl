@import '../include/all';

.post {
  background: #fff;
  box-sizing: border-box;
  list-style-type: none
  position: relative;
  &:before { /* left border that needs to be flush with the slider */
    content: '';
    positioning(absolute, 0, auto, 0, 0, 1px, auto);
    background: $c-low;
  }
  &:after { /* right border that needs to be flush with the slider */
    content: '';
    positioning(absolute, 0, 0, 0, auto, 1px, auto);
    background: $c-low;
  }
  .header {
    padding: 2em 1.5em 0;
    position: relative;
    z-index: 1;
    .permalink {
      background: $c-medium;
      border-radius: 12px;
      color: white;
      cursor: pointer;
      font-size: 12px;
      line-height: 24px;
      positioning(absolute, 24px, 24px, auto, auto, 24px, 24px);
      text-align: center;
      &:hover {
        background: $c-medium-high;
      }
      &:active {
        background: $c-medium-high;
        box-shadow: rgba(black, .2) 0 1px 3px 0 inset;
      }
    }
    .edit {
      margin-top: 0;
    }
    .title {
      line-height: 32px;
      max-width: 85%;
      text-shadow: rgba(white, .5) 0 1px 0;
    }
    .metadata {
      box-sizing: border-box;
      line-height: 3em;
      margin: 1em -24px 0;
      padding: 0 24px;
      text-transform: uppercase;
      >span {
        color: $c-medium-high;
        margin-right: 32px;
        [class^="icon-"]:before,
        [class*=" icon-"]:before {
          color: $c-medium;
        }
      }
      .avatar {
        display: inline-block;
        height: 20px;
        margin-right: 8px;
        vertical-align: text-bottom;
        width: 20px;
      }
      .btn {
        float: right;
        margin-top: 10px;
        text-transform: none;
      }
    }
  }
  .body {
    box-sizing: border-box;
    padding: 1.5em 1.5em 3em 1.5em;
  }

  /* Transitions/state */
  &.open, &.selected {
    .slider {
      height: .5em;
      min-height: .5em;
    }
    .edit, .permalink {
      opacity: 1;
    }
    .metadata {
      border-top: 1px solid $c-low;
      border-bottom: 1px solid $c-low;
    }
    .body {
      box-sizing: border-box; /* repeat due to an animation quirk */
      height: 100%;
      min-height: 100%;
      opacity: 1;
      overflow: auto;
    }
  }
  &:not(.open):not(.selected) {
    cursor: pointer;
    margin-bottom: 1px;
    & + .selected {
      margin-top: -1px;
    }
    .slider {
      height: 100%;
      min-height: 100%;
    }
    .header{
      padding-top: 1.5em;
    }
    .edit,
    .permalink {
      opacity: 0;
    }
    .metadata {
      margin-top: 0;
      >span {
        color: white;
        [class^="icon-"]:before,
        [class*=" icon-"]:before {
          color: white;
        }
      }
    }
    .body {
      height: 0;
      min-height: 0;
      opacity: 0;
      overflow: hidden;
      p {
        margin: 0;
      }
    }
  }
  .posts.anySelected &:not(.selected) {
    max-height: 0;
    overflow: hidden;
    margin-bottom: 0;
  }
}

/* Post navigation on the bottom of the post page */
.single-nav {
  background: $c-low;
  height: 10.5em;
  .post.next,
  .post.previous {
    overflow: hidden;
    .header {
      box-sizing: border-box;
      height: 10.5em;
    }
    h2.title {
      font-size: 1.25em;
      line-height: 1.5em;
      max-height: 4.5em;
      overflow: hidden;
    }
    h4.nextPrev {
      color: white;
      text-transform: uppercase;
      margin-bottom: .5em;
    }
    .metadata, .edit {
      display: none;
    }
  }
  .post.previous {
    width: 30%;
    float: left;
  }
  .post.next {
    width: 70%
    float: right;
  }
}



/* Post editing */
.post > form {
  padding: 0 20px 3em;
  textarea {
    max-height: 12em;
  }
}


/* Post colors */
with-slider(color) {
  & .slider {
    positioning(absolute, 0, 0, auto, 0, 100%);
    background: color;
    z-index: -1;
  }
  &:hover .slider{
    background-image: linear-gradient(top, rgba(lighten(color, 10%), .7), rgba(darken(color, 10%), .7) 100%);
  }
  &:active .slider{
    background-image: linear-gradient(top, rgba(darken(color, 10%), .7), rgba(lighten(color, 10%), .7) 100%);
  }
}

.post.color-0 .header {
  with-slider: $c-1;
}
.post.color-1 .header {
  with-slider: $c-2;
}
.post.color-2 .header {
  with-slider: $c-3;
}
.post.color-3 .header {
  with-slider: $c-4;
}
.post.color-4 .header {
  with-slider: $c-5;
}
.post.color-5 .header {
  with-slider: $c-6;
}


/* Post typography */
.post .body{
  &.admin {
    padding-bottom: 9em;
    h1, h2, h3, h4, h5, h6 {
      font-weight: bold;
      & + p {
        margin-top: .75em;
      }
    }
    form {
      margin-bottom: 3em;
    }
    table {
      width: 100%;
    }
  }
  /* offset heading sizes */
  h1 {
    h1-alt();
  }
  h2 {
    h2-alt();
  }
  h3 {
    h3-alt();
  }
  h4 {
    h4-alt();
  }
  h5 {
    h5-alt();
  }
  h6 {
    h6-alt();
  }
  p, ul, ol, pre, code {
    & + h1, & + h2, & + h3, & + h4, & + h5, & + h6 {
      margin-top: 2em;
      /* margin-bottom: 1em; */
    }
  }
  h1, h2, h3, h4, h5, h6 {
    & + p, & + pre, & + code {
      margin-top: 0;
    }
  }
  p {
    & + ul, & + ol {
      margin-top: 0;
    }
    &:first-of-type {
      margin-top: 0;
    }
  }
  /* lists */
  ul, ol {
    margin: .75em 1.5em;
    & + p {
      margin-top: 0;
    }
    li {
      list-style-position: outside;
    }
  }
  li {
    list-style-type: disc;
    > ul li{
      list-style-type: circle;
    }
  }
}