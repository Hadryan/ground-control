@import 'nib';

.post {
  list-style-type: none
  .body {
    background: #fff;
    
    > *:not(.metadata) {
      margin: 20px;
    }
  }
  
  .metadata {
    padding: 20px;
    .title, .byline {
      font-weight: normal;
    }
    .byline {
      font-family: 'Raleway', Helvetica, sans-serif;
      text-transform: uppercase;
    }
  }
}

// colors 
.post:nth-child(4n + 1) {
  background: rgb(251, 144, 103); // ORANGE
}
.post:nth-child(4n + 2) {
  background: rgb(157, 206, 198); // GREEN
}
.post:nth-child(4n + 3) {
  background: rgb(207, 185, 150); // BROWN
}
.post:nth-child(4n + 4) {
  background: rgb(154, 190, 211); // BLUE
}


.post {
  .header, .body {
    overflow: hidden;
  }
  .body {
    max-height: 0px;
        
    animation-name: slidedown;
    animation-duration: 1s;
    animation-direction: reverse;
  }
  .header {
    animation-name: slidedown-header;
    animation-duration: 1s;
  }
}

.post.open {
  .header {
    max-height: 10px;
    
    animation-name: slidedown-header;
    animation-duration: 1s;
    animation-direction: reverse;
  }
  .body { 
    max-height: none;
    
    animation-name: slidedown;
    animation-duration: 1s;
    animation-direction: normal;
  }
}

@keyframes slidedown-header {
  from {
    max-height: 10px;
  }
  to  {
    max-height: 120px
  }
}

@keyframes slidedown {
  from {
    max-height: 0px;
  }
  to {
    max-height: 600px;
  }
}

