@import 'include/all';

.post {
  background: #fff;
  box-sizing: border-box;
  list-style-type: none
  position: relative;
  &:after { /* right border that needs to be flush with the slider */
    content: '';
    positioning(absolute, 0, 0, 0, auto, 1px, auto);
    background: $c-low;
  }
  .header {
    padding: 2em 1.5em 0;
    position: relative;
    z-index: 1;
    .edit,
    .permalink {
      background: $c-medium;
      border-radius: 12px;
      color: white;
      font-size: 12px;
      line-height: 24px;
      positioning(absolute, 24px, 24px, auto, auto, 24px, 24px);
      text-align: center;
    }
    .edit {
      margin-top: 0;
    }
    .title {
      line-height: 32px;
      max-width: 85%;
      text-shadow: rgba(white, .5) 0 1px 0;
    }
    .metadata {
      box-sizing: border-box;
      line-height: 3em;
      margin: 1em -24px 0;
      padding: 0 24px;
      text-transform: uppercase;
      .avatar {
        display: inline-block;
        height: 20px;
        margin-right: 8px;
        vertical-align: middle;
        width: 20px;
      }
      >span {
        color: $c-medium-high;
        font-size: ($small / $font-size) * 1em ;
        margin-right: 32px;
        [class^="icon-"]:before,
        [class*=" icon-"]:before {
          color: $c-medium;
        }
      }
    }
  }
  .body {
    box-sizing: border-box;
    max-width: 85%;
    overflow: hidden;
  }
  &.selected {
    .slider {
      height: .5em;
      min-height: .5em;
    }
    .edit,
    .permalink {
      opacity: 1;
    }
    .metadata {
      border-top: 1px solid $c-low;
      border-bottom: 1px solid $c-low;
    }
    .body {
      height: 100%;
      min-height: 100%;
      opacity: 1;
      padding: 0 24px 3em;

    }
  }
  &:not(.selected) {
    margin-bottom: 1px;
    .slider {
      height: 100%;
      min-height: 100%;
    }
    .header{
      padding-top: 1.5em;
    }
    .edit,
    .permalink {
      opacity: 0;
    }
    .metadata {
      margin-top: 0;
      >span {
        color: white;
        [class^="icon-"]:before,
        [class*=" icon-"]:before {
          color: white;
        }
      }
    }
    .body {
      height: 0;
      min-height: 0;
      opacity: 0;
      p {
        margin: 0;
      }
    }
  }
}


.post form {
  padding: 20px;
  clearfix: true;
}


// colors
with-slider(color) {
  & .slider {
    positioning(absolute, 0, 0, auto, 0, 100%);
    background: color;
    z-index: -1;
  }
}

.post:nth-child(4n + 1) .header {
  with-slider: rgb(251, 144, 103); // ORANGE
}
.post:nth-child(4n + 2) .header {
  with-slider: rgb(157, 206, 198); // GREEN
}
.post:nth-child(4n + 3) .header {
  with-slider: rgb(207, 185, 150); // BROWN
}
.post:nth-child(4n + 4) .header {
  with-slider: rgb(154, 190, 211); // BLUE
}