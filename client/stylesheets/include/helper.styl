positioning($type, $top = auto, $right = auto, $bottom = auto, $left = auto, $width = auto, $height = auto) {
  position: $type;
  top: $top;
  bottom: $bottom;
  left: $left;
  right: $right;
  width: $width;
  height: $height;
}
link($rest = $c-primary, $hover = $c-secondary, $active = $c-tertiary){
  color: $c-primary;
  &:hover {
    color: $c-secondary;
  }
  &:active {
    color: $c-tertiary;
  }
}