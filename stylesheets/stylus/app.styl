html {
  height: 100%;
}
a {
  color: white;
  text-decoration: none;
}

body {
  color: white;
  background: transparent;
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue",
  Helvetica, Arial, "Lucida Grande", sans-serif;
  overflow: hidden;
  #main {
    box-sizing: border-box;
    position: relative;
    padding-top: 200px;
    width: 100%;
    .panel {
      width: 800px;
      margin: 0px auto;
      h1 {
        color: #eee;
        font-family: 'PT Sans Narrow', sans-serif;
        font-size: 96px;
        font-weight: bold;
        text-shadow: rgba(black, .3) 0 4px 0, rgba(white, 1) 0 1px 0;
        text-transform: uppercase;
      }
      .tagline {
        font-size: 24px;
        line-height: 36px;
      }
      .button-wrapper {
        background: rgba(black, .5);
        border-bottom: 1px solid rgba(white, .3);
        border-radius: 4px;
        box-shadow: rgba(black, .3) 0 1px 5px 0 inset;
        display: inline-block;
        margin-top: 24px;
        padding: 3px 3px 3px;
        .btn {
          border-radius: 4px;
          box-shadow: rgba(white, .3) 0 0 0 1px inset, rgba(white, 1) 0 1px 0 0 inset, rgba(#721209, 1) 0 3px 0 0;
          display: inline-block;
          font-family: 'PT Sans Narrow', sans-serif;
          font-size: 24px;
          height: 54px;
          letter-spacing: 1px;
          line-height: 54px;
          padding: 0 40px;
          position: relative;
          text-transform: uppercase;
          top: -3px;
        }
      }
    }
  }
  .orbit-wrapper {
    height: 650px;
    width: 980px;
    z-index: -1;
    position: absolute;
    top: 0;
    margin-left: -480px;
    left: 50%;
    .drawing {
      position: relative;
      left: -200px;
    }
  }

}



#footer {
  bottom: 20px;
  position: absolute;
  right: 20px;
  >* {
    display: inline-block;
    vertical-align: top;
  }
  .meteor {
    font-size: 32px;
    font-weight: bold;
    text-shadow: rgba(black, .3) 0 1px 0;
  }
  .join {
    font-size: 32px;
    font-weight: lighter;
    padding: 0 16px;
  }
  .percolate {
    bottom: -3px;
    display: inline-block;
    font-family: 'PT Sans Narrow', sans-serif;
    font-size: 16px;
    line-height: 16px;
    position: relative;
    text-transform: uppercase;
    text-shadow: rgba(black, .3) 0 1px 0;
    img {
      float: left;
      margin-top: -4px;
      margin-right: 10px;
    }
  }
}

