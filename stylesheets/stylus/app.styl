@import 'nib';
@import './animation';

background-blue = rgb(2, 16, 55);

global-reset()

centered(width, height) {
  absolute: top 50% left 50%;
  width: width;
  height: height;
  margin: -0.5 * width -0.5 * height;
}


body {
  color: white;
  background: background-blue;
}
a {
  color: white;
}

#main {
  max-width: 800px;
  margin: 200px auto 0;
}

#footer {
  absolute: bottom right;
}

h1 {
  text-transform: uppercase;
}

