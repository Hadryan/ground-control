@import 'nib';
@import './animation';


background-blue = rgb(2, 16, 55);

global-reset()

centered(width, height) {
  absolute: top 50% left 50%;
  width: width;
  height: height;
  margin: -0.5 * width -0.5 * height;
}

html {
}

body {
  color: white;
  height: 650px;
  box-shadow: rgba(black, .6) 0 -100px 0 0 inset;
  #main {
    max-width: 800px;
    margin: 0px auto;
    padding-top: 200px;
  }

}
a {
  color: white;
}


#footer {
  absolute: bottom right;
}

h1 {
  text-transform: uppercase;
}

